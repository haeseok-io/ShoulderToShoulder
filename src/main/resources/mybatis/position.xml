<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.haeseok.sts.dao.PositionDAO">
    <select id="getPositionList" resultType="PositionDTO">
        Select no, name From position Where 1
    </select>
    <select id="getPositionDetailList" resultType="PositionDetailDTO">
        Select no, name, position_no From position_detail Where 1
    </select>
    <select id="getPositionDetailListByPositionNo" parameterType="int" resultType="PositionDetailDTO">
        Select no, name, position_no from position_detail Where position_no=#{positionNo}
    </select>
</mapper>